{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "*.ts",
    "controllers/**/*.ts",
    "middleware/**/*.ts", 
    "routes/**/*.ts"
, "index.ts"  ],
  "exclude": ["node_modules", "dist", "generated"]
}